@charset "utf-8";
/*
 * 后台系统首页CSS样式
 */
body {color:#797979;background:#f1f2f7;font-family:PingFang SC,Lantinghei SC,'Microsoft YaHei';padding:0px !important;margin:0px !important;font-size:14px;text-rendering:optimizeLegibility;-webkit-font-smoothing:antialiased;-moz-font-smoothing:antialiased;}
ul li {list-style:none;}
input[type=checkbox],input[type=radio]{vertical-align: middle; margin:0;}
a,a:hover,a:focus {text-decoration:none;outline:none;}
::selection {background:#FF6C60;color:#fff;}
::-moz-selection {background:#FF6C60;color:#fff;}
.row{margin:0;}
#container {width:100%;height:100%;}

.nor-container{margin:0 22px; padding:40px 0 0 30px; background: url(../img/welcome-bg.jpg) no-repeat center bottom #f8f8fa; background-size: contain;}
.nor-container h3{font-size:24px; font-weight: bold; color:#818182;}
.nor-container h3 span{font-weight: normal;}
.nor-container h3 i{display: inline-block; width: 30px; height:24px; margin:0 8px 0 0; background: url(../img/yun.png) no-repeat;}
.nor-container p{line-height: 24px; margin:35px 0 0 40px; font-size:16px; color:#818182;}

/*面包屑*/
.position{height: 40px; line-height: 40px; padding: 0; margin: 0 22px;}
.position i {position: relative; top: 3px; width: 12px; height: 17px; margin: 0 5px 0 0; background: url(../img/icon-location.png) no-repeat;}
.position i.fa-home:before {content: "";}
.position .list{display: inline-block; font-size:14px; color:#d2d2d2;}
.position .list a{color:#667fa0; cursor: default;}
.position .list span{color:#797979;}

/*底部*/
.site-footer {overflow: hidden; background: #5b6e84;color: #fff;}
.site-footer > div {margin: 10px 0;}
.go-top {float: right;width: 20px;height: 20px;margin-right: 1%;border-radius: 50%;-webkit-border-radius: 50%;background: rgba(255,255,255,.5);}
.go-top i {color: #2A3542;}