@charset "utf-8";
/*
 * 后台系统通用导航CSS样式
 */
body {color:#797979;background:#f1f2f7;font-family:PingFang SC,Lantinghei SC,'Microsoft YaHei';padding:0px !important;margin:0px !important;font-size:14px;text-rendering:optimizeLegibility;-webkit-font-smoothing:antialiased;-moz-font-smoothing:antialiased;}
ul li {list-style:none;}
input[type=checkbox],input[type=radio]{vertical-align: middle; margin:0;}
a,a:hover,a:focus {text-decoration:none;outline:none;}
::selection {background:#FF6C60;color:#fff;}
::-moz-selection {background:#FF6C60;color:#fff;}
#container {width:100%;height:100%;}
/*成功失败提示页面*/
/*html, body, .wrapper {height: 100%; min-width: 1040px; overflow: hidden;}*/
.opr-container + .site-footer {position: absolute; bottom: 0; left: 0; right: 0;}
.opr-container {position: absolute; top: 50%; left: 50%; width: 424px; height: 390px; margin: -195px 0 0 -212px; overflow: hidden;}
.opr-container .opr-img {display: block; width: 100%; height: 210px; background: url(../img/opr-img.png) no-repeat 0 0;}
.opr-container .opr-img.fail {background-position: 0 0;}
.opr-container .opr-img.success {background-position: 0 -222px;}
.opr-container .opr-box .text-red{ line-height: 22px;margin: 40px 0 10px; text-align: center; font-size: 20px; color: #ff6c60;}
.opr-container .opr-box .help-block {margin: 0; text-align: center; font-size: 12px; color: #797979;}
.opr-container .btn-box {margin: 54px auto 0; text-align: center;}
.opr-container .btn-box .btn {width: 110px; height: 34px; line-height: 20px; padding: 6px 12px; margin: 0 30px 0 0;}
.opr-container .btn-box .btn-default {background: #949caf; border-color: #949caf; color: #fff;}
.opr-container .btn-box .btn-default:hover {background: #a1a9bc; border-color: #a1a9bc;}